{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "lib": ["ES2020"],
    "types": ["node", "jest"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,  // Cambiado a false para evitar errores de compilaci칩n por variables no usadas
    "noUnusedParameters": false,  // Cambiado a false para evitar errores de compilaci칩n por par치metros no usados
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,  // A침adido para resolver advertencias de ts-jest
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}